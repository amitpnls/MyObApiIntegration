@model HonorITDemo.Models.PurchaseOrderModel
@{
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
}

    <h2>Purchase order list</h2>
    <h4>Total Count: @Model.Count</h4>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Number</th>
                <th>Supplier Name</th>
                <th>Subtotal</th>
                <th>Freight</th>
                <th>TotalAmount</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var order in @Model.Items)
                {
                    <tr>
                        <td align="left">@order.Date.ToString("M-d-yyyy") </td>
                        <td align="left">@order.Number</td>
                        <td align="left">@order.Supplier.Name</td>
                        <td align="right">$@order.Subtotal</td>
                        <td align="right">$@order.Freight</td>
                        <td align="right">$@order.TotalAmount</td>
                    </tr>
                }
            }
        </tbody>
    </table>
@if (Model.Count > 0)
{
    @Html.ActionLink("Delete All PO", "DeletePurchaseOrderAR", "Home", new { @class = "btn btn-primary" })
}